{% if errors %}
<ul>
    {% for err in errors %}
    <li>{{ err }}</li>
    {% endfor %}
</ul>
{% endif %}
<form method="post">
    <label>
        Email
        <input name="email" type="email" autofocus required>
    </label>

    <input type="hidden" name="{{ CSRFFormName }}" value="{{ CSRFToken }}">

    <input type="submit" value="Send" class="btn btn-primary">
</form>
